doctype html
html
  head
    title nodeauth
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
     .container
       .navbar-header
         button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
           span.sr-only Toggle navigation
           span.icon-bar
           span.icon-bar
           span.icon-bar
         a.navbar-brand(href='/') Node Auth
       #navbar.collapse.navbar-collapse
         ul.nav.navbar-nav
           li(class=(title == 'Members'?'active':''))
             a(href='/') Members
           li(class=(title == 'Register' ? 'active' : ''))
             a(href='/users/register') Register
           li(class=(title == 'Login'?'active':''))
             a(href='/users/login') Login
         ul.nav.navbar-nav.navbar-right
            li(class=(title == 'Logout'?'active':''))
               a(href='/users/logout') Logout
    .container
      block content
      
    script(type="text/javascript", src="https://cdn.bootcss.com/jquery/3.1.0/jquery.min.js")
    script(type="text/javascript", src="/javascripts/bootstrap.min.js")
    
      
